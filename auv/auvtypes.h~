#ifndef AUV_TYPES_
#define AUV_TYPES_

#include "imu.h"

#define NUMBER_OF_THRUSTERS 3

enum auvStatus {READY, RUNNING, PAUSED, KILLED};
enum cameraPosition {FORWARD, UP, DOWN, LEFT, RIGHT, UNKNOWN};

typedef struct
{
	double power;
	double voltage;
	double current;
	bool state;
} powerData;

typedef struct {
	auvStatus status = 0;
	imu_data orientation;
	double depth;
	signed char thrusterSpeeds[NUMBER_OF_THRUSTERS];
	powerData thrusterPower;
	cameraPosition camera = 5;
	bool droppedLeft = false;
	bool droppedRight = false;
	bool manualOverrideDisabled = true;
} AUVSensors;


typedef struct
{
	int forward;
	int yaw;
	int vertical;
} AUVMotion;

#endif
